<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="@mipmap/bg">

    <Button
        android:background="@drawable/homebuttons"
        android:id="@+id/gpa"
        android:layout_width="900px"
        android:layout_height="400px"
        android:drawableTop="@drawable/homedrawablecal"
        android:text="GPA Calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:background="@drawable/homebuttons"
        android:id="@+id/todo"
        android:layout_width="900px"
        android:layout_height="400px"
        android:drawableTop="@drawable/homedrawabletodo"
        android:text="To Do"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <Button
        android:background="@drawable/homebuttons"
        android:id="@+id/reminder"
        android:layout_width="900px"
        android:layout_height="400px"
        android:drawableTop="@drawable/homedrawablereminder"
        android:text="Acadamic Reminder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <Button

        android:background="@drawable/homebuttons"
        android:id="@+id/social"
        android:layout_width="900px"
        android:layout_height="400px"
        android:drawableTop="@drawable/homedrawablelinker"
        android:text="Social Linker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="40px"
        android:text="Hello Good Moring Peyooow!"
        android:textSize="60px"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />


</androidx.constraintlayout.widget.ConstraintLayout>